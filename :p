var caraterPilConors = "arrogante";
var dia = 1;
while (caraterPilConors  == "arrogante"){
    if (dia == 1){
        console.log(dia+") Aprenda a ter Humildade e Empatia");
    }
    if (dia == 2){
        console.log(dia+") Aprenda a ter Bondade e Gentileza");
    }
    if (dia == 3){
        console.log(dia+") Aprenda a ter Amor Verdadeiro");
    }
    if (dia == 4){
        console.log(dia+") Aprecie a Vida Cotidiana");
    }
    if (dia == 5){
        caraterPilConors = "Phil Connors se tornou uma pessoa melhor";
        console.log(caraterPilConors);
    }
    dia = dia + 1;
}
